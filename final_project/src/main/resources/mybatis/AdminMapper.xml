<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.KG.mybatis.myMapper">

	<!-- 회원 목록 조회 -->
	<select id="selectMemberList" resultType="memberDTO">
		SELECT * FROM member
	</select>

	<!-- 회원 목록 관리 > 추가 -->
	<insert id="insertMember">
		INSERT INTO member VALUES(#{m_id}, #{m_pw}, #{m_name}, #{m_nick}, #{m_birth}, #{m_email})
	</insert>

	<!-- 회원 목록 관리 > 수정 -->
	<update id="updateMember">
		UPDATE member SET m_pw = #{m_pw}, m_name = #{m_name}, m_nick = #{m_nick}, m_birth = #{m_birth} WHERE m_id = #{m_id}
	</update>

	<!-- 회원 목록 관리 > 삭제 -->
	<update id="deleteMember">
		DELETE FROM member WHERE m_id = #{m_id}
	</update>
</mapper>